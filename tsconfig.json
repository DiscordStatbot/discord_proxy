{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2022",
    "outDir": "./build",
    "rootDir": "./src",
    "removeComments": true,
    "strict": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "sourceMap": true,
    "exactOptionalPropertyTypes": true,
    "resolveJsonModule": true,
    "skipLibCheck": true
  },
  "ts-node": {
    "files": true
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "examples",
    "tests",
    "dist",
    "build",
    ".archive"
  ]
}